CFLAGS=-O3 -march=native -std=c89 -Wall -Wextra -pedantic -Wno-long-long

all: check bench

main:
	@$(CC) $(CFLAGS) -DSTORM_DEBUG -o main main.c storm.c
	@./main
	@rm main

bench:
	@$(CC) $(CFLAGS) -o bench ../../utils/bench.c storm.c
	@./bench
	@rm bench

check:
	@$(CC) $(CFLAGS) -I. -o check ../../utils/check.c storm.c
	@./check
	@rm check
